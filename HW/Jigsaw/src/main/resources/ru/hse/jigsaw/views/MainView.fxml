<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.hse.jigsaw.views.MainView"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <HBox>
            <VBox>
                <GridPane fx:id="board"/>
                <HBox>
                    <Label text="Turns: "/>
                    <Label fx:id="turnsLabel"/>
                </HBox>

                <HBox>
                    <Label text="Elapsed time: "/>
                    <Label fx:id="time"/>
                </HBox>

            </VBox>

            <VBox>
                <padding>
                    <Insets left="10"/>
                </padding>
                <Label text="New piece">

                </Label>

                <GridPane fx:id="piece"/>
                <Button text="Generate new piece" onAction="#generatePiece"/>
            </VBox>
        </HBox>

    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
